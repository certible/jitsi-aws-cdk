{
  "compilerOptions": {
    "target": "es2020",
    "rootDir": "./lib",
    "module": "NodeNext",
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts", "lib/**/*.js"]
}
